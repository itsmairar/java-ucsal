package ucsal;

import java.util.Scanner;

public class PrimeiroCodigo {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in); //pegar dados
		double nota1, nota2, media; //declarando variaveis
		System.out.println("Informe a nota da primeira prova: ");
		nota1 = sc.nextDouble();//atribuindo valor a elas 
		System.out.println("Informe a nota da segunda prova: ");
		nota2 = sc.nextDouble();
		
		media = (nota1+nota2)/2;
		System.out.println("Sua media Ã©: "+media);

	}

}
