package ucsal;

import java.util.Scanner;

public class Triangulo {

	/*O usuario deve informar 3 valores correspondentes ao lado de um triangulo. Informe o tipo de 
	 * triangulo quanto ao lado: isóceles (dois lados iguais), equilátero (tres lados iguais) e escaleno
	 * (todos os lados diferentes)*/
	public static void main(String[] args) {
		Scanner ent = new Scanner(System.in);
		System.out.println("Infome 3 valores correspondentes ao lado de um triangulo: ");
		int lado1=ent.nextInt(),
				lado2=ent.nextInt(),
				lado3=ent.nextInt();
		if(lado1==lado2 && lado2==lado3){
			System.out.println("Equilatero");
		}else if(lado1==lado2 || lado2==lado3 || lado1==lado3) {
			System.out.println("Isoceles");
		}else{
			System.out.println("Escaleno");
		}
	}
}

